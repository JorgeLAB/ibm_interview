<h1>Listing People</h1>
<%= link_to 'New Person', new_person_path, class: "btn btn-primary" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Company name</th>
      <th>Phones</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= link_to person.first_name, person %></td>
        <td><%= link_to person.last_name, person %></td>
        <td><%= person.company_name %></td>
        <td><%= person.phone1 %> / <%= person.phone2 %></td>
        <td><%= person.email %></td>
        <td><%= link_to '', person, class:"btn btn-default btn-sm glyphicon glyphicon-eye-open" %></td>
        <td><%= link_to '', edit_person_path(person), class:"btn btn-primary btn-sm glyphicon glyphicon-pencil" %></td>
        <td>
            <%= link_to '', person, class:"btn btn-danger btn-sm glyphicon glyphicon-trash",
                method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
