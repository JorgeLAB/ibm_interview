<!DOCTYPE html>
<html>
<head>
  <title>IBM Interview</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand">IBM Interview</a>
      </div>
      <% if user_signed_in? %>
        <div class="collapse navbar-collapse navbar-right">
          <%= link_to('Edit Profile', edit_user_registration_path, class: "navbar-brand") %>
          <%= link_to('Log out', destroy_user_session_path, class: "navbar-brand", method: :delete) %>
        </div>
      <% end %>
    </div>
  </nav>

  <div class="container">
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <%= yield %>
  </div>

</body>
</html>
